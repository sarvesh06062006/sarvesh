#include<stdio.h>
int main()
{
    int amount;
    int per;
    int time;
    int interest = amount + (amount * per / 100);
    printf("enter the amount:");
    scanf("%d",amount);
    printf("enter the person:");
    scanf("%d",per);
    printf("enter the time:");
    scanf("%d",time);
    printf("%d", interest + time);
    return 0;
    
    
}


